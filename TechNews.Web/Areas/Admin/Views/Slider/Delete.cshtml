@using TechNews.Utility.DateConvertor
@model TechNews.DataLayer.Entities.Slider

@{
    ViewData["Title"] = "حذف";
}

<h1>حذف اسلاید</h1>

<h3>آیا از حذف این اسلاید اطمینان دارید ؟</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SlideBanner)
        </dt>
        <dd class = "col-sm-10">
            <img src="/img/slides/@Model.SlideBanner" class="img-thumbnail img-slider-banner"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SlideAlt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SlideAlt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemRefersTo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemRefersTo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SlideSubmitDate)
        </dt>
        <dd class = "col-sm-10">
            <span>@Model.SlideSubmitDate.ToShamsiDate()</span>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="حذف" class="btn btn-outline-danger" /> |
        <a asp-action="Index">بازگشت به لیست</a>
    </form>
</div>
