@using TechNews.Utility.DateConvertor
@model TechNews.DataLayer.Entities.User

@{
    ViewData["Title"] = "جزئیات";
}

<h1>جزئیات کاربر</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfilePhoto)
        </dt>
        <dd class="col-sm-10">
            <img src="/img/users/@Model.ProfilePhoto" class="img-thumbnail imgUserthumbnail"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IpAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IpAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>
        <dd class="col-sm-10">
            <span>@Model.RegisterDate.ToShamsiDate()</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentifierCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentifierCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoleId)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.RoleId)
            {
                case 1:
                    <span>کاربر</span>
                    break;
                case 2:
                    <span>نویسنده</span>
                    break;
                case 3:
                    <span>ادمین</span>
                    break;
                default:
                    <span>کاربر</span>
                    break;
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.UserId">ویرایش</a>
    <a asp-action="Index">بازگشت به لیست</a>
</div>
